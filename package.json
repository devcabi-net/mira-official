{
  "name": "mira-discord-bot",
  "version": "1.0.0",
  "description": "A Discord verification bot built with Discord.js and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "watch": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "deploy": "ts-node -r tsconfig-paths/register src/deploy-commands.ts",
    "setup": "node setup.js",
    "test-config": "npm run build && node test-bot.js"
  },
  "keywords": [
    "discord",
    "bot",
    "verification",
    "typescript"
  ],
  "author": "Mira Team",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
